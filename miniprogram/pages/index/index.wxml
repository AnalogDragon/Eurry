<view class="topclass" style="display: flex; flex-direction: column;">

  <view bindtap="buttonInfo" style="height: 10%; background-color: rgb(133, 182, 255) ;display: flex;flex-direction: column; justify-content: center; align-items: center;font-size: 24px">Eurry</view>

  <view style="height: 65%; display: flex;flex-direction: column; justify-content: center; align-items: center;">
    <image bindtap="buttonLookBig" src="{{imgSrc}}" mode="aspectFit" style="height: 100%; padding: 0%; margin: 4%;"></image>
  </view>

  <view style="height: 20%;display: flex;flex-direction: column; justify-content: center; align-items: center;">
    <button bindtap="buttonPicSelect" style="width: 70%;  margin: 2%; background-color: rgb(207, 207, 207) ;color: rgb(43, 43, 43);"> 更换图片 </button>
    <button bindtap="buttonSend" style="width: 70%;  margin: 2%; background-color: rgb(207, 207, 207) ;color: rgb(43, 43, 43);"> 连接设备 </button>
  </view>

  <view style="height: 5%;"></view>

</view>